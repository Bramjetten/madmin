<h1><%= resource.model.name.singularize %> #<%= @record.id %></h1>

<% resource.attributes.each do |attribute| %>
  <% next if attribute[:field].nil? %>
  <% field = attribute[:field].new(record: @record, attribute_name: attribute[:name], partial: "show") %>

  <div class="flex py-2">
    <div class="w-32 flex-shrink-0 text-gray-700 uppercase tracking-wide text-sm">
      <%= field.attribute_name.to_s.titleize %>
    </div>

    <div>
      <%= render partial: field.to_partial_path, locals: { field: field } %>
    </div>
  </div>
<% end %>
